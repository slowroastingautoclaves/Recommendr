<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.gatech.slowroastingautoclaves.recommendr.SearchMovieActivity">

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movieSearchView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:iconifiedByDefault="false"
        android:queryHint="Search movies" />

    <TextView
        android:layout_width="309dp"
        android:layout_height="103dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="RECOMMENDR"
        android:id="@+id/textView13"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:shadowColor="#b5b8db"
        android:background="#ee5050"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Releases"
        android:id="@+id/releasesButton"
        android:layout_below="@+id/movieSearchView"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginTop="67dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent DVDs"
        android:id="@+id/dvdsButton"
        android:layout_alignBottom="@+id/releasesButton"
        android:layout_alignRight="@+id/movieSearchView"
        android:layout_alignEnd="@+id/movieSearchView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movieSearchButton"
        android:layout_below="@+id/movieSearchView"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/ic_menu_search" />

</RelativeLayout>
